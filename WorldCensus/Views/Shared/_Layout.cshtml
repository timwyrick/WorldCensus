<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Word Census", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                    <li class="dropdown">
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                            Choose Map
                            <span class="caret"></span>
                        </a>
                        <!--
                            <form class="dropdown-menu">
                                <input type="radio" name="datatype" value="population"> Population<br>
                                <input type="radio" name="datatype" value="area"> Area<br>
                                <input type="radio" name="datatype" value="medianage"> Median Age<hr>
                                <input type="radio" name="map" value="africa"> Africa<br />
                                <input type="radio" name="map" value="asia"> Asia<br />
                                <input type="radio" name="map" value="australia"> Australia / Oceania<br />
                                <input type="radio" name="map" value="europe"> Europe<br />
                                <input type="radio" name="map" value="north_america"> North America<br />
                                <input type="radio" name="map" value="south_america"> South America<br />
                                <input type="submit" value="submit" />

                            </form>
                        -->
                        @using (Html.BeginForm("GetMap", "Home", FormMethod.Post, new { id = "maptype", @class = "dropdown-menu" }))
                            {
                                <div id="form-container"> 

                                    <select name="map" required>
                                        <option value="Africa">Africa</option>
                                        <option value="Asia">Asia</option>
                                        <option value="Europe">Europe</option>
                                        <option value="Oceania">Oceania</option>
                                        <option value="North America">North America</option>
                                        <option value="South America">South America</option>
                                        <option value="Index">World</option>
                                    </select>

                                    <select name="datatype" required>
                                        <option value="Population">Population</option>
                                        <option value="Life Expectancy">Life Expectancy</option>
                                        <option value="Total Area">Total Area</option>
                                        <option value="Gross Domestic Product (GDP)">Gross Domestic Product</option>
                                    </select>
                                    
                                <input type="submit" value="submit" style="width: 180px" />
                                </div>
                        }
                    </li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <div class="left-section">
            @RenderSection("data", required: false);
        </div>
        @RenderSection("guidebuttons", required: false);
    </div>

    @Scripts.Render("~/bundles/bootstrap") 
    @RenderSection("scripts", required: false)
</body>
</html>
