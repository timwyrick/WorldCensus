<script>
    jQuery.noConflict();
    jQuery(function(){
      var $ = jQuery;

      $('#focus-single').click(function(){
        $('#map1').vectorMap('set', 'focus', {region: 'AU', animate: true});
      });
      $('#focus-multiple').click(function(){
        $('#map1').vectorMap('set', 'focus', {regions: ['AU', 'JP'], animate: true});
      });
      $('#focus-coords').click(function(){
        $('#map1').vectorMap('set', 'focus', {scale: 7, lat: 35, lng: 33, animate: true});
      });
      $('#focus-init').click(function(){
        $('#map1').vectorMap('set', 'focus', {scale: 1, x: 0.5, y: 0.5, animate: true});
      });
      $('#map1').vectorMap({
          map: 'asia_mill',
        panOnDrag: true,
        focusOn: {
          x: 0.5,
          y: 0.5,
          scale: 2,
          animate: true
        },
        series: {
          regions: [{
              scale: ['#00ff00', '#ff0000'],
            normalizeFunction: 'linear',
            values: {
                @foreach (var b in Model)
                {
                    if(b.Data != null)
                    {
                        <text>"@(b.Code)":@b.Data,</text>
                    }

                }
            }
          }]
        },
        onRegionTipShow: function (event, label, code) {

            var contName = '#' + code;
            var attrName = $("#attr_name").text();

            console.log(contName);

            var dataValue = $(contName).text();

            console.log(dataValue);

            label.html(label.html() + ' (' + code.toString() +
                ') <br /> ' + attrName + ': ' + dataValue);
        },
        onRegionClick: function (event, code) {

            var regName = code;

            $.ajax({
                type: "GET",
                url: "/Home/Modal",
                contentType: "application/json; charset=utf-8",
                // data: { "Id": id },
                //datatype: "json",
                //modal: true,
                data: { 'dataname': code },
                success: function (data) {
                    //  debugger;
                    $('#myModalContent').html(data);
                    // $('#myModal').modal(options);
                    $('#myModal').modal('show');

                },
                error: function () {
                    alert("Dynamic content load failed.");
                }
            });
        },
      });
    })
</script>


