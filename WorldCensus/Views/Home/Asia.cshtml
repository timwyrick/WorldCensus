@section data{
    <table style="width:100%">
        <tr>
            <th>Country</th>
            <th id="attr_name">@ViewBag.DataType</th>
        </tr>
        @foreach (var i in Model)
        {
            <tr>
                <td>@i.Name</td>
                @if(i.Data != null)
                {
                <td id="@i.Code">@i.Data</td>
                }
                else
                {
                    <td id="@i.Code">n/a</td>
                }
            </tr>

        }
    </table>

}

